            %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
          / Wrapper for slides
          .carousel-inner
            .item.active
              %img.img-responsive.img-full{src: "assets/oculus.jpg"}/
            .item
              %img.img-responsive.img-full{src: "assets/vrguy.jpg"}/
            .item
              %img.img-responsive.img-full{src: "assets/ces.jpg"}/
          / Controls
          %a.left.carousel-control{"data-slide" => "prev", href: "#carousel-example-generic"}
            %span.icon-prev
          %a.right.carousel-control{"data-slide" => "next", href: "#carousel-example-generic"}
            %span.icon-next
